                            </li>
                            <li>
                                <a href="/product/browse">Products</a>
                            </li>
                            <li>
                                <a href="/category/browse">Categories</a>
                            </li>
                            <li>
                                <a href="/department/browse">Department</a>
                            </li>
                            <li>
                                <a href="/province/browse">Province</a>
                            </li>
                            <li>
                                <a href="/report/custdemo">Customer Demographic</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container">

          <!-- Main hero unit for a primary marketing message or call to action -->
          <div class="hero-unit">
              <%= yield %>
          </div>

          <footer>
